{
	"name": "root",
	"private": true,
	"license": "GPL-3.0",
	"scripts": {
		"build": "yarn build:cra",
		"build:cra": "node scripts/build.js",
		"compile": "yarn tsc",
		"dev": "yarn dev:watch",
		"dev:login:main": "yarn dev --domains wptelegram/login/main",
		"dev:watch": "node scripts/watch.js",
		"gen-workspaces": "node scripts/gen-workspaces.js",
		"postinstall": "yarn gen-workspaces",
		"sb": "start-storybook -p 6006",
		"sb:build": "build-storybook",
		"start": "node scripts/start.js"
	},
	"lint-staged": {
		"./**/*.{js,jsx,ts,tsx}": "yarn eslint"
	},
	"workspaces": {
		"packages": [
			"domains/**",
			"packages/**"
		],
		"nohoist": [
			"**/babel-loader",
			"**/babel-jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"react-app"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/setupTests.{js,jsx,ts,tsx}",
			"!src/index.{js,jsx,ts,tsx}",
			"!src/serviceWorker.{js,jsx,ts,tsx}",
			"!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
		]
	},
	"dependencies": {
